{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <!-- Section: Design Block -->
    <section class="">
        <!-- Jumbotron -->
        <div class="px-4 py-4 px-md-5 text-center text-lg-start" style="background-color: hsl(0,0%,100%)">
            <div class="container">
                <div class="row gx-lg-5 align-items-center">
                        <div  class="col-md-6 col-lg-5 d-none d-md-block">
                            <img  src="{{asset("build/images/seohbmlogin.PNG")}}"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />

                            <div class="alert alert-warning text-center" role="alert">
                                Avant d'utiliser cet outil, veuillez ex√©cuter l'application HBM en local.
                            </div>
                        </div>


                    <div class="col-lg-6 h-150 py-5  mb-4 mb-lg-0 " >
                        <div class="card" style="border-radius: 1rem;">
                            <div class="card-body py-5 px-md-4" style="background-color: hsl(0,0%,0%); border-radius: 1rem;">

                                <form>
                                    {% block form %}
                                    <h2 class="fw-bold mb-2 text-center text-white">Login</h2>
                                    <p class="text-white-50 mb-5 text-center">Veuillez entrer votre identifiant et votre mot de passe !</p>
                                    <!-- Email input -->
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control  form-control-lg" placeholder="{{'security.email'|trans}}" required autofocus>

                                    </div>

                                    <!-- Password input -->
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="password" name="password" id="inputPassword" class="form-control  form-control-lg" placeholder="{{'security.password'|trans}}" required>

                                    </div>


                                    <div
                                            class="d-flex justify-content-between align-items-center">
                                        <!-- Checkbox -->
                                        <div class="form-check mb-0">
                                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3"/>
                                            <label class="form-check-label text-white" for="form2Example3" >
                                                {{'security.remember-me'|trans}}
                                            </label>
                                        </div>

                                        <a href="{{path('app_forgot_password_request')}}" class="text-body">
                                            <i class="fa fa-question-circle" aria-hidden="true"></i>
                                            {{'security.forgetten-password'|trans}}</a>
                                    </div>
                                    <input  type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <div class="text-center text-lg-start mt-4 pt-2">


                                        <button type="submit" class="btn btn btn-lg" style="padding-left: 2.5rem ; padding-right: 2.5rem; background-color: #f35709">
                                            <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
                                            {{'security.login'|trans}}</button>
                                        <!-- <p class="small fw-bold mt-2 pt-1 mb-0">{{'security.dont-have-account'|trans}}
									<a href="register" class="link-danger">{{'security.register'|trans}}</a>
								</p> -->

                                    </div>
                                    {% endblock %}
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Jumbotron -->
    </section>
    <!-- Section: Design Block -->
</form>
{% endblock %}
